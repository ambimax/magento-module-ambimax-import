<?xml version="1.0"?>
<config>
    <modules>
        <Ambimax_Import>
            <version>1.0.0</version>
        </Ambimax_Import>
    </modules>

    <global>
        <helpers>
            <ambimax_import>
                <class>Ambimax_Import_Helper</class>
            </ambimax_import>
        </helpers>

        <models>
            <ambimax_import>
                <class>Ambimax_Import_Model</class>
            </ambimax_import>
        </models>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <ambimax_import>
                    <files>
                        <default>Ambimax_Import.csv</default>
                    </files>
                </ambimax_import>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <ambimax_import>
            <general>
                <aws_use_credentials_file>1</aws_use_credentials_file>
                <aws_default_region>eu-central-1</aws_default_region>
            </general>
            <email_report>
                <enabled>0</enabled>
                <send_on_error_only>1</send_on_error_only>
                <subject>Import Report</subject>
            </email_report>
        </ambimax_import>
    </default>

    <phpunit>
        <suite>
            <modules>
                <Ambimax_Import/>
            </modules>
        </suite>
    </phpunit>
</config>